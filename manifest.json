{
  "manifest_version": 2,

  "name": "Highlight Translator",
  "description": "This extension translates highlighted text to the specified language.",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html",
	"default_title": "Highlight Translator"
  },
  "permissions": [
    "activeTab",
    "https://ajax.googleapis.com/",
	"tabs"
  ]
}